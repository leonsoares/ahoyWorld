                      </form>
                      <%if(currentUser){%>
                        <button href="#" class="mark-visited action-buttons preventDefault" id="share-btn"  data-toggle="modal" data-target="#sharedScene" title="Share Location">
                            <i class="far fa-paper-plane fa-2x"></i>  
