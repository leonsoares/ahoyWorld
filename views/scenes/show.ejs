            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-footer table-dark">
              
              <form id="delete-form" action="../scenes/<%-scene._id %>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-xs btn-danger" value="Yes">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>

              </form>
            
          </div>
          
        </div>
      </div>
    </div>


    <div class="modal fade" id="editScene<%-scene._id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header table-dark">
              <h5 class="modal-title" id="exampleModalLabel">Editing: 
                <br> <%-scene.name%></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body table-dark">
                <form action="/scenes/<%=scene._id %>?_method=PUT" method="POST">
                  <div class="form-group ">
