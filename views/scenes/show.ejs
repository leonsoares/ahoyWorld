                              <input type="radio" class="form-check-input" name="sceneType"  value="forest" id="Forest"/><label class="form-check-label" for="Forest">Forest</label> 
                              <% } %>
                        </div>
        
                      <div class="form-check form-check-inline">
                          <% if(scene.sceneType === "island"){ %>
                          <input type="radio" class="form-check-input" name="sceneType"  value="island" id="Island" checked/><label class="form-check-label" for="Island">Island</label>
