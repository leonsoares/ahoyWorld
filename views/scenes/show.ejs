                              <% } %>
                        </div>
                      
                      <div class="form-check form-check-inline">
                          <% if(scene.sceneType === "waterfall"){ %>
                          <input type="radio" class="form-check-input" name="sceneType"  value="waterfall" id="Waterfall" checked/><label class="form-check-label" for="Waterfall">Waterfall</label> 
                            <% }else { %>
                              <input type="radio" class="form-check-input" name="sceneType"  value="waterfall" id="Waterfall" /><label class="form-check-label" for="Waterfall">Waterfall</label> 
                              <% } %>
                        </div>
        
                      <div class="form-check form-check-inline">
